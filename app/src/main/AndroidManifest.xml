<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newland.tiange">

    <uses-permission android:name="android.permission.INTERNET" />

<!--    启动模式：-->
<!--    任务栈如果没有设置，则是默认的包名-->
<!--    一个任务栈，每次activity都是新建实例-->
<!--    android:launchMode="standard"-->
<!--跳转目标，如果在 栈顶，则不会重新创建实例，且会调用onNewIntent()方法-->
<!--    android:launchMode="singleTop"-->
<!--跳转目标只要在 栈中，就会复用，且会调用onNewIntent()，且清除该activity上的所有activity-->
<!--    android:launchMode="singleTask"-->
<!--全局复用，不管哪个task栈，只要有就复用。每个activity占有一个新的task栈-->
<!--    android:launchMode="singleInstance"-->



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".jump.BActivity"
            android:label="B"
            android:launchMode="singleInstance"

            ></activity>
        <activity android:name=".jump.AActivity"
            android:label="A"
            android:launchMode="singleTop"
            >
        </activity>
        <activity android:name=".PopupWindowActivity" />
        <activity android:name=".CustomDialogActivity" />
        <activity android:name=".ProgressActivity" />
        <activity
            android:name=".MainActivity"
            android:label="SNMS">

